{% extends 'base.html.twig' %}

{% block title %}Регистрация!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/registration_page.css') }}">
{% endblock %}

{% block body %}
<div class="container">
<img src="{{ asset('images/auth.avif') }}" alt="Изображение" class="placeholder-image">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <h1>Регистрация!</h1>
    
        {{ form_row(registrationForm.username, {label: 'Логин'}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Пароль'}) }}
        {{ form_row(registrationForm.isDoctor, {label: 'Вы врач?'}) }}
        
        <button type="submit" class="btn">Зарегистрироваться</button>
    
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
